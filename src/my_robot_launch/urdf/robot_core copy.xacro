<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >
<!-- /home/jetson/myspace/autoJetsonBot/src/my_robot_launch/urdf/robot_core.xacro -->
<!-- <xacro:property name="pi" value="3.14159265359"/>    -->
<xacro:include filename="inertial_macros.xacro" />

    <!-- COLORS FOR ROBOT PARTS -->
    <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
    </material>
    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>
    <material name="green">
        <color rgba="0 1 0 1"/>
    </material>
    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>
    <material name="yellow">
        <color rgba="1 1 0 1"/>
    </material>
    <material name="orange">
        <color rgba="1 0.5 0 1"/>
    </material>
    <material name="purple">
        <color rgba="0.5 0 0.5 1"/>
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>


    <!-- ROBOT BASE LINK -->
    <link name="base_link">
    </link>


    </link>

    <!-- BASE_FOOTPRINT LINK -->

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="base_footprint">
    </link>


    <!-- ROBOT CHASSIS LINK-->
    <joint name="chassis_joint" type="fixed">
        <origin xyz="-0.03 0 0" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="chassis"/>
    </joint>


    <!-- ROBOT CHASSIS -->
    <link name="chassis">
        <visual>
            <origin xyz="0.0725 0 0.035" rpy="0 0 0"/>
            <geometry>
                <box size="0.145 0.14 0.07"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.0725 0 0.035" rpy="0 0 0"/>
            <geometry>
                <box size="0.145 0.14 0.07"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.145" y="0.14" z="0.07">
            <origin xyz="0.0725 0 0.035" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>
    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- ROBOT WHEELS -->

    <!-- LEFT WHEEL -->
    <joint name="left_wheel_joint" type="continuous">
        <origin xyz="0 0.09 -0.02" rpy="-${pi/2} 0 0"/>
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.035" length="0.027"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.035" length="0.027"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.027" radius="0.035">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>

    </link> 
    <gazebo reference="left_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- RIGHT WHEEL -->
    <joint name="right_wheel_joint" type="continuous">
        <origin xyz="0 -0.09 -0.02" rpy="${pi/2} 0 0"/>
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.035" length="0.025"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.035" length="0.025"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.025" radius="0.035">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link> 
    <gazebo reference="right_wheel">
        <material>Gazebo/Black</material>
    </gazebo>   

    <!-- CASTER WHEEL -->
    <joint name="caster_wheel_joint" type="fixed">
        <origin xyz="0.095 0 -0.02" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="caster_wheel"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.035"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.035"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.035">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link> 
    <gazebo reference="caster_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

    

    <!-- ROBOT LIDAR -->
    <joint name="lidar_joint" type="fixed">
        <origin xyz="0.07 0 0.07" rpy="0 0 0"/>
        <parent link="chassis"/>
        <child link="lidar"/>
    </joint>

    <link name="lidar">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>

            <geometry>
                <cylinder radius="0.035" length="0.065"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>

            <geometry>
                <cylinder radius="0.035" length="0.065"/>
            </geometry>
        </collision>
    </link> 
    <gazebo reference="lidar">
        <material>Gazebo/Red</material>
    </gazebo>
    
</robot>

<!-- 

my robot dimensions:

    base: 
        - center point between the wheels: 0 0 0 mm

    chassis:
        - length: 145 mm
        - width: 140 mm
        - height: 70  mm

        - chassis_joint origin point: -30 0 0 mm (behind the center point between the wheels)
        - chassis origin point: 72.5 0 35 mm (behind the center point between the wheels)
        
        
